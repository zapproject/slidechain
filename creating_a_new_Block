function createBlock(previousBlock, transactions, forkData = null) {
    var newBlock = new BlockHeader {
        previousBlockHash = getHash(previousBlock),
        merkleRoot = calculateMerkleRoot(transactions),
        timestamp = getCurrentTimestamp(),
        difficultyTarget = calculateDifficultyTarget(),
        nonce = findNonce(),
        authorizedHashes = [],
        forkFlag = false
    }

    // If the block is a fork block
    if (forkData) {
        newBlock.authorizedHashes = forkData.authorizedHashes
        newBlock.forkFlag = true
    }

    // Add additional logic as required for block creation
    return newBlock
}

